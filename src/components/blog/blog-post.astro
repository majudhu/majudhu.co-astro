---
interface Props {
    title: string;
    slug: string;
    date: string;
}
const { title, slug, date } = Astro.props as Props;
---

<article
    id={slug}
    class="m-4 bg-white/90 px-4 md:px-8 w-full flex-none snap-center sm:pt-20 py-2"
>
    <h3 class="text-2xl font-bold my-2 text-gray-900">
        {title}
    </h3>
    <span class="text-gray-400 font-semibold">{date}</span>
    <slot />
</article>
