---
import PortofolioItemDarkHalf from "./portofolio-item-dark-half.astro";
import PortofolioSection from "./portofolio-section.astro";
---

<PortofolioSection title="Skills">
    <PortofolioItemDarkHalf title="Languages">
        <span class="skill high">HTML</span>
        <span class="skill high">CSS</span>
        <span class="skill high">JavaScript</span>
        <span class="skill high">PHP</span>
        <span class="skill high">C#</span>
        <span class="skill high">Dart</span>

        <span class="skill med">Regex</span>
        <span class="skill med">C</span>
        <span class="skill med">Bash</span>
        <span class="skill med">Python</span>
        <span class="skill med">Java</span>
        <span class="skill med">SQL</span>

        <span class="skill low"><b>Rust</b></span>
        <span class="skill low">C++</span>
        <span class="skill low">Perl</span>
        <span class="skill low">Kotlin</span>
        <span class="skill low">Swift</span>
        <span class="skill low">Go</span>
        <span class="skill low">Assembly</span>
        <span class="skill low">Haskell</span>
    </PortofolioItemDarkHalf>

    <PortofolioItemDarkHalf title="Frameworks & Libraries">
        <span class="skill high">Flutter</span>
        <span class="skill high">Next.js</span>
        <span class="skill high">React</span>
        <span class="skill high">expressjs</span>
        <span class="skill high">Bootstrap</span>
        <span class="skill high">tailwindcss</span>

        <span class="skill med">Vue.js</span>
        <span class="skill med">.NET</span>
        <span class="skill med">Windows Forms</span>
        <span class="skill med">WPF</span>
        <span class="skill med">Ionic</span>
        <span class="skill med">Mongoose</span>

        <span class="skill low">Flask</span>
        <span class="skill low">JSP</span>
        <span class="skill low">Laravel</span>
        <span class="skill low">Android</span>
    </PortofolioItemDarkHalf>

    <PortofolioItemDarkHalf title="Applications & Tools">
        <span class="skill high">SSH</span>
        <span class="skill high">Git</span>
        <span class="skill high">Wireguard</span>
        <span class="skill high">Linux (Debian, Fedora, Ubuntu, Arch)</span>
        <span class="skill high">MySQL</span>
        <span class="skill high">MariaDB</span>
        <span class="skill high">NodeJs</span>
        <span class="skill high">VScode</span>
        <span class="skill high">Android Studio</span>

        <span class="skill med">Vim</span>
        <span class="skill med">PostgreSQL</span>
        <span class="skill med">MSSQL</span>
        <span class="skill med">SQLite</span>
        <span class="skill med">MongoDB</span>
        <span class="skill med">Nginx</span>
        <span class="skill med">Apache</span>
        <span class="skill med">Docker</span>
        <span class="skill med">GPG</span>
        <span class="skill med">Visual Studio</span>

        <span class="skill low">Xcode</span>
        <span class="skill low">Netbeans</span>
        <span class="skill low">Eclipse</span>
    </PortofolioItemDarkHalf>

    <PortofolioItemDarkHalf title="Online Platforms & Services">
        <span class="skill high">Github</span>
        <span class="skill high"> Vercel</span>
        <span class="skill high">Digitalocean</span>
        <span class="skill high"> Firebase</span>
        <span class="skill high"> Plesk</span>

        <span class="skill med"
            >AWS (ec2, beanstalk, lightsail, lambda, s3)
        </span>
