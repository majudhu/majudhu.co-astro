        <span class="skill med"> Google Cloud</span>
        <span class="skill med"> MongoDB Atlas</span>

        <span class="skill low">CircleCI</span>
        <span class="skill low"> TravisCI</span>
    </PortofolioItemDarkHalf>

    <PortofolioItemDarkHalf title="Protocols & Standards">
        <span class="skill high">SSH</span>
        <span class="skill high">JSON</span>
        <span class="skill high">REST</span>
        <span class="skill high">API</span>
        <span class="skill med">DNS</span>
        <span class="skill med">IP</span>
    </PortofolioItemDarkHalf>

    <PortofolioItemDarkHalf title="Other Applications">
        <span class="skill high">Adobe Photoshop</span>
        <span class="skill high">Adobe Illustrator</span>
        <span class="skill high">Microsoft Office Word</span>

        <span class="skill med"> CorelDRAW</span>
        <span class="skill med"> Microsoft Office Excel</span>
    </PortofolioItemDarkHalf>
</PortofolioSection>

<style>
    @tailwind components;

    @layer components {
        .skill {
            @apply inline-block px-1 m-1 rounded;
        }
        .skill.high {
            @apply bg-gray-500 text-white font-bold;
        }
        .skill.med {
            @apply bg-gray-700 text-gray-200;
        }
        .skill.low {
            @apply text-gray-400 text-xs;
        }
    }
</style>
