---
export interface Props {
    title: string;
    href?: string;
}
const { title, href } = Astro.props as Props;
---

<article class="bg-gray-800 rounded-2xl p-4 text-sm text-gray-300">
    <h3 class="text-gray-400 font-semibold mb-2 text-base">
        {href ? <a href={href}>{title}</a> : title}
    </h3>

    <slot />
</article>
